<div class="container">
    <div class="well col-md-6 col-md-offset-3" >
      <div class= "page-header">
        <h3> Ready to Rock again? </h3>
      </div>
      <% if @auth_error %>
        <p class = 'text-danger'><%= @auth_error %></p>
      <% end %>
      <%= form_tag url: sign_in_path do |f| %>
      <div class="form-group">
        <div>
          <%= label_tag :email, nil, class: "control-label" %>
          <%= email_field_tag :email, nil, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div>
          <%= label_tag :password, nil, class: "control-label" %>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
      </div>

      <div>
        <%= submit_tag "Sign In", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
</div>
